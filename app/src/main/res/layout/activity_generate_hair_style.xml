<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GenerateHairStyle">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/selfImg"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Self Image"
            android:backgroundTint="@color/white_gray"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:id="@+id/btSelfImg"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/shapeImg"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white_gray"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:text="Select Hair Image"
            android:layout_marginTop="20dp"
            android:id="@+id/btShapeImg"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/colorImg"/>
        <Button
            android:layout_width="match_parent"
            android:backgroundTint="@color/white_gray"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Select Hair Color Image"
            android:layout_marginTop="20dp"
            android:id="@+id/btColorImg"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload"
            android:backgroundTint="@color/primary"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:id="@+id/btUpload"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvResult"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/resultImg"/>
    </LinearLayout>


</ScrollView>